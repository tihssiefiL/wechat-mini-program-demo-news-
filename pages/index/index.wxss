.news-item {
  position: relative;
  height: 180rpx;
  width: 100vw;
  box-sizing: border-box;
  border-bottom: 1px solid #dfdfdf;
}

.news-item-main {
  position: absolute;
  right: 0px;
  top: 0px;
  box-sizing: border-box;
  height: 180rpx;
  width: 570rpx;
}

.news-item-aside {
  position: absolute;
  left: 0px;
  top: 0px;
  box-sizing: border-box;
  height: 180rpx;
  width: 180rpx;
}

.news-item-time {
  box-sizing: border-box;  
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  padding: 10rpx;  
  font-size: 20rpx;
  color: #afafaf;
}

.news-item-pic {
  box-sizing: border-box;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  padding: 10rpx;
  height: 100%;
  width: 100%;
}

.news-item-title {
  box-sizing: border-box;  
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding: 10rpx;
  height: 140rpx;
  overflow: hidden;
  font-size: 34rpx;
}

.news-item-src {
  box-sizing: border-box;  
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  padding: 10rpx;
  font-size: 20rpx;
  color: #afafaf;
}
