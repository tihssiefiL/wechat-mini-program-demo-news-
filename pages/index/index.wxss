.container {
  min-height: 100vh;
  width: 100vw;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0rpx;
  margin: 0rpx;
  position: relative;
}

.channels {
  background-color: #fff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100vw;
  height: 90rpx;
  box-sizing: border-box;
  padding: 0rpx;
  margin: 0rpx;
  white-space: nowrap;
  border-bottom: #ededed 1rpx solid;
  z-index: 999;
}

.channel {
  width: 140rpx;
  height: 100%;
  box-sizing: border-box;
  display: inline-block;
}

.channel-item {
  /* border-right: 1rpx solid #EDEDED; */
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}

.channel-selected {
  box-sizing: border-box;
  border: solid #ededed 1rpx;
  color: #4aa4fc;
  box-shadow: 5rpx 5rpx 5rpx #888;
}

.news {
  min-height: 100vh;
  width: 100vw;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 90rpx;
  margin: 0rpx;
  position: relative;
}

